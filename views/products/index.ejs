            <div class="col-12">
                <div class="section_heading text-center">
                    <h2>KOLEKSİYONLAR</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="karl-projects-menu mb-100">
        <div class="text-center portfolio-menu">
            <button class="btn active" data-filter="*">TÜM ÜRÜNLER</button>
            <button class="btn" data-filter=".sal">ŞAL</button>
            <button class="btn" data-filter=".esarp">EŞARP</button>
            <button class="btn" data-filter=".hediyekutu">HEDİYE KUTU</button>
            <button class="btn" data-filter=".aksesuar">AKSESUAR</button>
        </div>
    </div>

    <div class="container">
        <div class="row karl-new-arrivals">
            <% for(let index=data.length-1;index>=0;index--){let item=data[index]; %>

            <!-- Single gallery Item -->
            <div class="col-12 col-sm-6 col-md-4 single_gallery_item <%=item.model%> wow fadeInUpBig" data-wow-delay="0.7s">
                <!-- Product Image -->
                <div class="product-img">
                    <% if(item.image !=undefined && item.image.data!=undefined){ %>
                    <img
                            src="data:image/<%=item.image.contentType%>;base64,<%=item.image.data.toString('base64')%>"

                    />
                    <%}
                    else{ %>
                    <img src="<%=item.img%>" alt="">
                    <%}%>
                    <div class="product-quicview">
                        <a href="/products/<%=item._id%>"><i class="ti-plus"></i></a>
                    </div>
                </div>
                <!-- Product Description -->
                <div class="product-description">
                    <h4 class="product-price"><%=item.price%>₺</h4>
                    <p><%=item.name%></p>

                </div>
            </div>
            <%}%>
        </div>
    </div>
</section>
<!-- ****** New Arrivals Area End ****** -->

